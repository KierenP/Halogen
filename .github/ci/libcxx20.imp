    { include: [ "<__system_error/errc.h>", private, "<system_error>", public ] },
    { include: [ "<__new/interference_size.h>", private, "<new>", public ] },

    # Mappings for includes between public headers
    { include: [ "<ios>", public, "<iostream>", public ] },
